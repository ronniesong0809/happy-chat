<div class="col-md-4">
    <div class="well" style="background-color: rgb(22, 105, 173);">
        <h3>Online Users</h3>
        <ul class="list-group" id='users'> </ul>
    </div>
</div>

<div class="col-md-8">
    <div class="chat" id="chat"></div>

    <form id="messageForm">

        <div class="input-group">
            <textarea class="form-control" id="message" placeholder="Enter message"></textarea>
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary" value="Send Message">Submit</button>
            </div>

        </div>
        <div class="form-group">

            <br />
            <div class="messageBox" id="messageBox"> </div>

        </div>
    </form>
</div>
</div>

<script>
    $(function () {
        // connect socket
        var socket = io();
        // when the user enter the new message, submit to the socket client to socket server
        $('#messageForm').submit(function (e) {
            e.preventDefault();
            socket.emit('send message', $('#message').val());
            $('#message').val('');
        });

        // receive the message back from the socket server
        socket.on('new message', function (data) {
            console.log('data.name: ' + data.name);
            console.log(data.color);

            var date = new Date();
            var milliseconds = date.getDate();
            var time = moment(milliseconds).format("H:MMa");

            $('#messageBox').append($('#chat').prepend('<div id="well_chat"><strong>' + data.name + '</strong>' + ': ' + data.msg + '                    @' + time + '</div>'));

        });

        // get the users who are online
        socket.on('get users', function (data) {
            console.log('online users: ' + data);
            var html = '';
            for (i = 0; i < data.length; ++i) {
                html += '<li class="list-group-item">' + data[i] + '</li>'
            }
            $('#users').html(html);
        })
    });
</script>